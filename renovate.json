{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "gitlab>thelabnyc/renovate-config:application"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/\\.gitlab-ci\\.yml$/"
            ],
            "matchStrings": [
                "UBUNTU_VERSION: \"(?<currentValue>[^\\s@]+)(@(?<currentDigest>sha256:[0-9a-f]+))?\""
            ],
            "datasourceTemplate": "docker",
            "packageNameTemplate": "ubuntu",
            "versioningTemplate": "docker"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/\\.gitlab-ci\\.yml$/"
            ],
            "matchStrings": [
                "DOCKER_VERSION: \"(?<currentValue>[0-9.]+)\""
            ],
            "datasourceTemplate": "github-releases",
            "packageNameTemplate": "moby/moby",
            "extractVersionTemplate": "^v(?<version>.+)$"
        }
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major"
            ],
            "matchPackageNames": [
                "ubuntu"
            ],
            "enabled": false
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "matchPackageNames": [
                "moby/moby"
            ],
            "enabled": false
        }
    ]
}
